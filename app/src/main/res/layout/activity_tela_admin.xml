<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context=".TelaAdmin"
    android:background="@color/verde"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="wrap_content"
    android:background="@drawable/botao"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="20dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:padding="30dp">


    <ImageView
        android:layout_width="70dp"
        android:layout_marginRight="10dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_adminbranco" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Olá Admin, nessa tela você pode cadastrar um novo evento ou um aviso."
        android:textColor="#ffff"
        android:textStyle="bold"
        />

</LinearLayout>


    <Button
        android:id="@+id/btescolhadata"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Clique para escolher uma data"
        android:background="@drawable/botao"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"

        android:layout_gravity="center">

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data selecionada: "
            android:textStyle="bold"
            android:textSize="18sp"
           />

    <TextView
        android:id="@+id/mostrardata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:text="O que você está adicionando? "
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edittextevento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o evento"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_margin="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ex: Data de entrega das provas"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btaddevento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botaoborda"
        android:layout_margin="10dp"
        android:textSize="22sp"
        android:text="CONFIRMAR E ADICIONAR"
        />

    <Button
        android:id="@+id/bttarefas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boaobordabranco"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="TELA DE TAREFAS"
        />



</LinearLayout>